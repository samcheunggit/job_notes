<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<%= react_component 'GreetUser', name: 'Sam' %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Joburl</th>
      <th>Applieddate</th>
      <th>Company</th>
      <th>Stack</th>
      <th>Status</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.joburl %></td>
        <td><%= job.applieddate %></td>
        <td><%= job.company %></td>
        <td><%= job.stack %></td>
        <td><%= job.status %></td>
        <td><%= job.address %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
